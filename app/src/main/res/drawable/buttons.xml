<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="#ffd855" />
            <corners
                android:radius="5dp"/>
            <stroke
                android:width="1dip"
                android:color="#808080" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="#caa528" />
            <corners
                android:radius="5dp"/>
            <stroke
                android:width="1dip"
                android:color="#808080" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="#e9bf31" />
            <corners
                android:radius="5dp"/>
            <stroke
                android:width="1dip"
                android:color="#808080" />
        </shape>
    </item>
</selector>